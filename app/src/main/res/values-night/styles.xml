<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainContainer" parent="AppTheme">
        <item name="android:background">@color/md_theme_dark_primaryContainer</item>
    </style>

    <style name="mainSpinner" parent="AppTheme">
        <item name="android:popupBackground">@color/md_theme_dark_surfaceVariant</item>
        <item name="android:backgroundTint">@color/md_theme_dark_tertiary</item>
    </style>

    <style name="questionCard" parent="AppTheme">
        <item name="android:backgroundTint">@color/md_theme_dark_background</item>
        <item name="android:elevation">@dimen/cardViewElevation</item>
    </style>

    <style name="MainTextStyle" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TitleTextStyle" parent="MainTextStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TitleTextStyle.White" parent="TitleTextStyle">
    </style>

    <style name="StandardTextMediumStyle" parent="MainTextStyle">
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>

    <style name="StandardTextMediumStyle.White" parent="StandardTextMediumStyle">
    </style>

    <style name="StandardTextMediumStyle.OnBackground" parent="StandardTextMediumStyle">
        <item name="android:textColor">@color/md_theme_dark_onBackground</item>
    </style>

    <style name="StandardTextMediumStyle.OnSurfaceVariant" parent="StandardTextMediumStyle">
        <item name="android:textColor">@color/md_theme_dark_onSurfaceVariant</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>